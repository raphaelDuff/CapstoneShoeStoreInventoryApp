<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginInputBox">
        <item name="android:background">@color/loginSilver</item>
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/login_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="NewAccountButton">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:textSize">@dimen/new_account_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="WelcomeStyleText">
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/bungee</item>
    </style>

    <style name="welcomeInfoText">
        <item name="android:textSize">@dimen/welcome_body_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="detailItemText">
        <item name="android:textSize">@dimen/detail_item_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailItemEditText">
        <item name="android:textSize">@dimen/detail_item_text_size</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
